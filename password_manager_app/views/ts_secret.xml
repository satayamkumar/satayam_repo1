<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tag Tree View -->
    <record model="ir.ui.view" id="ts_secret_tree">
        <field name="name">ts_secret.tree</field>
        <field name="model">ts.secret</field>
        <field name="arch" type="xml">
            <!--            <tree string="Stages" editable="bottom">-->
            <tree string="Stages">
                <field name="name"/>
                <field name="secret_line_ids"/>
            </tree>
        </field>
    </record>

    <!-- Tag Form View -->
    <record id="ts_secret_view_form" model="ir.ui.view">
        <field name="name">ts_secret.form</field>
        <field name="model">ts.secret</field>
        <field name="arch" type="xml">
            <form string="Password Manager Secret">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active" invisible="1"/>
                    </group>

                    <notebook>
                        <page string="Secret Lines">
                            <field name="secret_line_ids">
                                <tree string="Secret Lines" editable="bottom">
                                    <field name="secret_type"/>
                                    <field name="name"/>
                                    <field name="secret" widget="char_toggle"
                                           options="{'toggle_password': True}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_ts_secret_views" model="ir.actions.act_window">
        <field name="name">Secrets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ts.secret</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a ts secret form
            </p>
        </field>
    </record>

    <menuitem id="menu_ts_secret_root" name="password manager app"/>
    <menuitem id="menu_ts_secret_sub_root" name="Credential" parent="menu_ts_secret_root"
              action="action_ts_secret_views"/>
    <!--    <menuitem id="menu_ts_secret_main" name="password manager app" parent="menu_ts_secret_sub_root"-->
    <!--              action="action_ts_secret_views"/>-->
</odoo>