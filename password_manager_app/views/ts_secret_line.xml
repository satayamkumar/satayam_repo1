<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tag Tree View -->
    <record model="ir.ui.view" id="'ts_secret_line_tree">
        <field name="name">ts_secret_line_.tree</field>
        <field name="model">ts.secret.line</field>
        <field name="arch" type="xml">
            <tree string="Stages">
                <field name="secret_type"/>
                <field name="name"/>
                <field name="secret_id"/>
                <!--                <field name="secret" password="True"/>-->
                <field name="secret"/>

            </tree>
        </field>
    </record>

    <!-- Tag Form View -->
    <record id="ts_secret_line_view_form" model="ir.ui.view">
        <field name="name">ts_secret_line_.form</field>
        <field name="model">ts.secret.line</field>
        <field name="arch" type="xml">
            <form string="Tags">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="secret_id"/>
                        <!--                        <field name="secret" password="True"/>-->
                        <field name="secret"/>
                        <field name="secret_type"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_ts_secret_line_views" model="ir.actions.act_window">
        <field name="name">password manager Line Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ts.secret.line</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a ts secret form
            </p>
        </field>
    </record>
</odoo>