<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Group Category -->
        <record id="group_category_password_manager_app_parent" model="ir.module.category">
            <field name="name">Access Password Manager App</field>
            <field name="description">Access groups related to Custom Module</field>
        </record>

        <!-- Group Category -->
        <record id="group_category_password_manager_app_child" model="ir.module.category">
            <field name="name">Access Category</field>
            <field name="description">Access groups related to Custom Module</field>
            <field name="parent_id" ref="password_manager_app.group_category_password_manager_app_parent"/>
        </record>

        <!-- Groups user  -->
        <record id="group_password_user" model="res.groups">
            <field name="name">Access User</field>
            <field name="category_id" ref="password_manager_app.group_category_password_manager_app_child"/>
        </record>

        <!-- Groups Manager-->
        <record id="group_password_manager_user" model="res.groups">
            <field name="name">Access Manager User</field>
            <field name="category_id" ref="password_manager_app.group_category_password_manager_app_child"/>
            <field name="implied_ids" eval="[(6,0, [ref('password_manager_app.group_password_user')])]"/>
        </record>

        <!-- Record Rule: Manager - Full Access -->
        <record id="secret_line_rule_group_password_manager_user" model="ir.rule">
        <field name="name">Secret Line Rule - Manager</field>
        <field name="model_id" ref="password_manager_app.model_ts_secret_line"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('password_manager_app.group_password_manager_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rule: User - Read Only -->
        <record id="secret_line_rule_group_password_user" model="ir.rule">
        <field name="name">Secret Line Rule - User</field>
        <field name="model_id" ref="password_manager_app.model_ts_secret_line"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('password_manager_app.group_password_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>